<p id="notice"><%= notice %></p>

<h1>Forbidden Words</h1>
<table class="table">
  <thead>
  <tr>
    <th scope="col">Word</th>
    <th scope="col" colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @forbidden_words.each do |word| %>
    <tr>
      <td><%= word.word %></td>
      <td><%= link_to 'Edit', edit_forbidden_word_path(word) %></td>
      <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New forbidden word', new_forbidden_word_path %>