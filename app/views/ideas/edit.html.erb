<h1>Edit Idea</h1>
<%= form_for(@idea) do |form| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
        <% @idea.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :idea_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, id: :idea_description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :picture %>
        <%= form.text_field :picture, id: :idea_picture, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
  </div>
<% end %>

<%= link_to 'Back', root_path %>